<div class="form">
  <%= form_for(:user,:url=>{:action=>'login'},:html=>{:id=>'login'}) do |f|%>
    <div>
      <%= f.label(:username)%>
      <%= f.text_field(:username)%>
    </div>
    <div>
      <%= f.label(:password)%>
      <%= f.password_field(:password)%>
    </div>
    <div>
      <%= submit_tag("login")%>
    </div>
  <%end%>
</div>
